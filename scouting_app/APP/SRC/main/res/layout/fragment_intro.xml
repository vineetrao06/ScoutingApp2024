<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR1"
    tools:context=".formUI.formPagerFragments.IntroFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:text="Pre-scouting"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/prescouting_check"
            app:layout_constraintEnd_toEndOf="@+id/starting_zone"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toEndOf="@+id/prescouting_check"
            app:layout_constraintTop_toTopOf="@+id/prescouting_check"
            app:layout_constraintVertical_bias="0.523" />

        <CheckBox
            android:id="@+id/prescouting_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:buttonTint="@color/white"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/starting_zone"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintStart_toStartOf="@+id/starting_zone"
            app:layout_constraintTop_toBottomOf="@+id/starting_zone"
            app:layout_constraintVertical_bias="0.0"></CheckBox>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:text="Qualifications"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/quals_check"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/quals_check" />

        <CheckBox
            android:id="@+id/quals_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:buttonTint="@color/white"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="@+id/prescouting_check"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/prescouting_check"
            app:layout_constraintTop_toBottomOf="@+id/prescouting_check"></CheckBox>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:text="Playoffs"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/playoffs_check"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/playoffs_check"
            app:layout_constraintVertical_bias="0.428" />

        <CheckBox
            android:id="@+id/playoffs_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:buttonTint="@color/white"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="@+id/quals_check"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/quals_check"
            app:layout_constraintTop_toBottomOf="@+id/quals_check"></CheckBox>

        <EditText
            android:id="@+id/name"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_white"

            android:textColorHint="@color/white"
            app:backgroundTint="@color/white"
            app:dt_name="Scouter Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185" />

        <EditText
            android:id="@+id/matchNum"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:layout_width="330dp"
            android:textCursorDrawable="@drawable/cursor_white"
            android:layout_height="67dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="416dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Match Number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:backgroundTint="@color/white"

            app:dt_name="Match Number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/teamNum"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:textCursorDrawable="@drawable/cursor_white"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Team Number"
            android:textColor="@color/white"
            app:backgroundTint="@color/white"
            app:dt_name="Team Number"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/matchNum"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/matchNum"
            app:layout_constraintTop_toBottomOf="@+id/matchNum"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/starting_zone"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/teamNum"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/teamNum"
            app:layout_constraintTop_toBottomOf="@+id/teamNum"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>